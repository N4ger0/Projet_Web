{% extends 'Layouts/layout.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <h1> Gestion des utilisateurs </h1>
    {%  if users != null %}
        <table>
            <tr> <th>Login</th> <th>Mot de passe</th> <th>Nom</th> <th>Pr√©nom</th><th>Date de naissance</th><th>Role</th><th>Pays</th></tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.login }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{% if user.birthdate != null %}
                        {{ user.birthdate.format('d-m-Y') }}
                        {% endif %}</td>
                    <td>{{ user.roles | join(' ') }}</td>
                    <td>{% if user.pays != null %}
                        {{ user.pays.name }}
                        {% endif %}</td>
                    {% if user.roles != ['ROLE_SADMIN'] and user != app.user %}
                    <td> <a href="{{ path('admin_supprimeruser', {'id': user.id}) }}"> Supprimer </a> </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p> Pas d'utilisateurs</p>
    {% endif %}
{% endblock %}