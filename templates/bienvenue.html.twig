{% extends 'Layouts/layout.html.twig' %}
{% block body %}
    <p> Bienvenue {% if app.user != null%}
        {{ app.user.login }}
        {% endif %}! </p>

    {% if app.user == null %}
        <a href="{{ path('app_login') }}"> Me connecter </a> <br>
        <a href="{{ path('app_register') }}"> Me créer un compte </a> <br>
    {% elseif app.user.roles == ['ROLE_CLIENT'] %}
        <a href="{{ path('app_logout') }}"> Me deconnecter </a> <br>
        <a href="{{ path('client_modifprofil') }}"> Modifier mon profil </a> <br>
        <a href="{{ path('client_listproduit') }}"> Liste des produits </a> <br>
        <a href="{{ path('client_panier') }}"> Mon panier </a> <br>
    {% elseif app.user.roles == ['ROLE_ADMIN'] %}
        <a href="{{ path('app_logout') }}"> Me deconnecter </a> <br>
        <a href="{{ path('client_modifprofil') }}"> Modifier mon profil </a> <br>
        <a href="{{ path('client_listproduit') }}"> Liste des produits </a> <br>
        <a href="{{ path('client_panier') }}"> Mon panier </a> <br>
        <a href="{{ path('admin_listuser') }}"> Gérer les utilisateurs </a> <br>
        <a href="{{ path('admin_ajouterproduit') }}"> Ajouter un produit </a> <br>
    {% elseif app.user.roles == ['ROLE_SADMIN'] %}
        <a href="{{ path('sadmin_ajouteradmin') }}"> Ajouter un admin </a> <br>
    {% endif %}
    {{ parent() }}
{% endblock %}